<div class="container">
<div id="jumbotron" class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">EAT-DA-BURGER</h1>
    <p class="lead">Yummy, yummy in your tummy!</p>
  </div>
</div>
</div>
{{!-- <h2>EAT-DA-BURGER<h2> --}}

<h3>Ready to be Devoured:</h3>

<ul>
    
    {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
        {{/unless}}
    {{/each}}

</ul>

<h3>Devoured Burgers</h3>

<ul>
    
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
        {{/if}}
    {{/each}}

</ul>

<form class='create-form'>

    <textarea rows='4' cols='50' id='submitBurger'>

    </textarea>

    <button type='submit' class="btn btn-warning">Submit</button>

</form>
